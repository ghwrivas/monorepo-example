{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "module": "esnext",
    "lib": ["es2017", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@mx-onboarding-workspace/feature-home": [
        "libs/feature-home/src/index.ts"
      ],
      "@mx-onboarding-workspace/feature-login": [
        "libs/feature-login/src/index.ts"
      ],
      "@mx-onboarding-workspace/feature-otp": ["libs/feature-otp/src/index.ts"],
      "@mx-onboarding-workspace/shared/components": [
        "libs/shared/components/src/index.ts"
      ],
      "@mx-onboarding-workspace/shell-store": ["libs/shell-store/src/index.ts"],
      "@mx-onboarding-workspace/shell-web": ["libs/shell-web/src/index.ts"]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
